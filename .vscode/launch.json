	"version": "0.2.0",
	"configurations": [
		{
			"name": "c++ debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cpp_09/ex00/btc",
			"args": ["input.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/cpp_09/ex00", // HOOOOOOOO LA CONFIG LAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}